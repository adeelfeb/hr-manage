<h1 class="my-4">All Documents</h1>

<%= link_to "New Document", new_document_path, class: "btn btn-primary mb-3" %>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Type</th>
      <th>Employee</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each_with_index do |document, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= document.name %></td>
        <td><%= document.doc_type %></td>
        <td><%= document.employee&.name || "N/A" %></td>
        <td>
        <div class="dropdown">
    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="documentActionsDropdown<%= document.id %>" data-bs-toggle="dropdown" aria-expanded="false">
      Actions
    </button>
    <ul class="dropdown-menu" aria-labelledby="documentActionsDropdown<%= document.id %>">
      <li>
        <%= link_to "Edit", edit_document_path(document), class: "dropdown-item" %>
      </li>
      <li>
        <%= link_to "More", document_path(document), class: "dropdown-item" %>
      </li>
      <li>
        <%= link_to "Delete", document_path(document),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this Document?" },
              class: "dropdown-item text-danger" %>
      </li>
    </ul>
  </div>
         
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
